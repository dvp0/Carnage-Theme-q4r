{% comment %}
  Product Trust Badges
  Displays trust signals like secure checkout, free shipping, returns, etc.
{% endcomment %}

<div class="product-trust-badges">
  <div class="trust-badges-grid">
    {%- if block.settings.show_secure_checkout -%}
      <div class="trust-badge-item">
        <svg class="trust-badge-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M12 2L4 5V11.09C4 16.14 7.41 20.85 12 22C16.59 20.85 20 16.14 20 11.09V5L12 2Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          <path d="M9 12L11 14L15 10" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
        <span class="trust-badge-text">Secure Checkout</span>
      </div>
    {%- endif -%}

    {%- if block.settings.show_free_shipping -%}
      <div class="trust-badge-item">
        <svg class="trust-badge-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M16 3H1V16H16V3Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          <path d="M16 8H20L23 11V16H16V8Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          <circle cx="5.5" cy="18.5" r="2.5" stroke="currentColor" stroke-width="2"/>
          <circle cx="18.5" cy="18.5" r="2.5" stroke="currentColor" stroke-width="2"/>
        </svg>
        <span class="trust-badge-text">
          {%- if block.settings.free_shipping_text != blank -%}
            {{ block.settings.free_shipping_text }}
          {%- else -%}
            Free Shipping
          {%- endif -%}
        </span>
      </div>
    {%- endif -%}

    {%- if block.settings.show_returns -%}
      <div class="trust-badge-item">
        <svg class="trust-badge-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M3 9L12 2L21 9V20C21 20.5304 20.7893 21.0391 20.4142 21.4142C20.0391 21.7893 19.5304 22 19 22H5C4.46957 22 3.96086 21.7893 3.58579 21.4142C3.21071 21.0391 3 20.5304 3 20V9Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          <path d="M9 22V12H15V22" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          <path d="M12 8C13.1046 8 14 7.10457 14 6C14 4.89543 13.1046 4 12 4C10.8954 4 10 4.89543 10 6C10 7.10457 10.8954 8 12 8Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
        <span class="trust-badge-text">
          {%- if block.settings.returns_text != blank -%}
            {{ block.settings.returns_text }}
          {%- else -%}
            Easy Returns
          {%- endif -%}
        </span>
      </div>
    {%- endif -%}

    {%- if block.settings.show_warranty -%}
      <div class="trust-badge-item">
        <svg class="trust-badge-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2"/>
          <path d="M12 6V12L16 14" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
        </svg>
        <span class="trust-badge-text">
          {%- if block.settings.warranty_text != blank -%}
            {{ block.settings.warranty_text }}
          {%- else -%}
            1-Year Warranty
          {%- endif -%}
        </span>
      </div>
    {%- endif -%}

    {%- if block.settings.custom_badge_1_text != blank -%}
      <div class="trust-badge-item">
        {%- if block.settings.custom_badge_1_icon != blank -%}
          <img src="{{ block.settings.custom_badge_1_icon | image_url }}" alt="" class="trust-badge-icon">
        {%- else -%}
          <svg class="trust-badge-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M22 11.08V12C21.9988 14.1564 21.3005 16.2547 20.0093 17.9818C18.7182 19.7088 16.9033 20.9725 14.8354 21.5839C12.7674 22.1953 10.5573 22.1219 8.53447 21.3746C6.51168 20.6273 4.78465 19.2461 3.61096 17.4371C2.43727 15.628 1.87979 13.4881 2.02168 11.3363C2.16356 9.18455 2.99721 7.13631 4.39828 5.49706C5.79935 3.85781 7.69279 2.71537 9.79619 2.24013C11.8996 1.76489 14.1003 1.98232 16.07 2.86" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M22 4L12 14.01L9 11.01" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        {%- endif -%}
        <span class="trust-badge-text">{{ block.settings.custom_badge_1_text }}</span>
      </div>
    {%- endif -%}

    {%- if block.settings.custom_badge_2_text != blank -%}
      <div class="trust-badge-item">
        {%- if block.settings.custom_badge_2_icon != blank -%}
          <img src="{{ block.settings.custom_badge_2_icon | image_url }}" alt="" class="trust-badge-icon">
        {%- else -%}
          <svg class="trust-badge-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M22 11.08V12C21.9988 14.1564 21.3005 16.2547 20.0093 17.9818C18.7182 19.7088 16.9033 20.9725 14.8354 21.5839C12.7674 22.1953 10.5573 22.1219 8.53447 21.3746C6.51168 20.6273 4.78465 19.2461 3.61096 17.4371C2.43727 15.628 1.87979 13.4881 2.02168 11.3363C2.16356 9.18455 2.99721 7.13631 4.39828 5.49706C5.79935 3.85781 7.69279 2.71537 9.79619 2.24013C11.8996 1.76489 14.1003 1.98232 16.07 2.86" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M22 4L12 14.01L9 11.01" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        {%- endif -%}
        <span class="trust-badge-text">{{ block.settings.custom_badge_2_text }}</span>
      </div>
    {%- endif -%}
  </div>
</div>
